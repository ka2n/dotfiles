[core]
    excludesfile = /Users/ka2n/.gitignore_global
    autocrlf = input
    quotepath = false
    precomposeunicode = true

[merge]
    tool = vimdiff
    ff = true

[push]
    default = simple

[receive]
    denyDeleteCurrent = warn

[diff]
    tool = vimdiff

[user]
    name = Katsuma Ito
    email = katsumai@gmail.com

[hub]
    protocol = https

[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
    log = auto

[alias]
    st = status
    ci = commit -v
    co = checkout
    up = pull --rebase
    di = diff
    br = branch
    pus = push
    psuh = push
    puhs = push
    suu  = submodule update
    suc  = submodule foreach git checkout . .
    log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %ch %Cblue%cn %Creset%s'
    log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
    log-release = shortlog --no-merges master..HEAD
    dt = difftool
    u = "!sh -c 'git clean-remotes; git update-master-ref; git delete-merged'"
    update-master-ref = update-ref refs/heads/master origin/master
    delete-merged = !git branch --merged | grep -v '*' | xargs -I % git branch -d %
    fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
    clean-remotes = fetch --prune
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
