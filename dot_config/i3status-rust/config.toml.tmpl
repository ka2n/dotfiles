theme = "nord-dark"
icons = "awesome"

[[block]]
block = "focused_window"
max_width = 50
show_marks = "visible"

#[[block]]
#block = "custom"
#command = "~/src/github.com/ka2n/dotfiles/i3status-rust/i3-focuedwindow.sh"
#interval = 2
#[[block]]
#block = "custom"
#command = "~/bin/get_mining_state"
#interval = 10

[[block]]
block = "music"
buttons = ["play", "next"]

[[block]]
block = "kdeconnect"

[[block]]
block = "memory"
display_type = "memory"
format_mem = "{mem_used}/{mem_total}"
format_swap = "{swap_used}"

[[block]]
block = "load"
interval = 1
format = "{1m}"

[[block]]
block = "custom"
command = "~/bin/i3-current-performance-profile.sh"
interval = 10

[[block]]
block = "temperature"
interval = 5
{{ if eq .ctype "laptop" }}
chip = "coretemp-isa-*"
{{ else }}
chip = "*-pci-*"
inputs = ["Tccd1", "Tccd2", "Composite"]
{{ end }}

#[[block]]
#block = "net"
#format = "{ssid} {signal_strength}"
#interval = 5

[[block]]
block = "disk_space"
path = "/"
alias = "/"
info_type = "available"
unit = "GB"
interval = 30
warning = 20.0
alert = 10.0


[[block]]
block = "sound"

[[block]]
block = "time"
interval = 60
format = "%F %R"
